<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="#CCCCCC"
    android:clickable="false"
    android:dividerPadding="20dp"
    android:paddingTop="10dp"
    android:minWidth="250dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"/>

        <com.poterin.andorra.NumberScroller
            xmlns:number_scroller="http://schemas.android.com/apk/res-auto"
            android:id="@+id/numberSelectorPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            number_scroller:minTextWidth="60dp"
            number_scroller:showSeekBar="false"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phrase"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"/>

        <com.poterin.andorra.NumberScroller
            xmlns:number_scroller="http://schemas.android.com/apk/res-auto"
            android:id="@+id/numberSelectorPhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            number_scroller:minTextWidth="60dp"
            number_scroller:showSeekBar="false"
            />
    </LinearLayout>

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"/>
</LinearLayout>
